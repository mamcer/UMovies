@model UMovies.Web.Models.SearchResultViewModel

@{
    ViewBag.Title = "Search";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br/>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<h3>@Model.ResultCount Results for '@Model.SearchText'</h3>

@foreach (var movie in Model.Movies)
{
    <a href="javascript:playMovie('@movie.FilePath')">@movie.Name</a>
    <br />
}